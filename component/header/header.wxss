/* component/header/header.wxss */

.header .icon-box-l{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}
.header .icon-box-l .icon-img{
  width: 100%;
  height: 100%;
  display: inline-block;
}
.header  .icon-box-l-name{
  display: inline-block;
  vertical-align: middle;
  margin-top: -32rpx;
}
.header .icon-box-r{
  width: 60rpx;
  height: 60rpx;
  display: inline-block;
}
.header .icon-box-r .icon-img{
  width: 100%;
  height: 100%;
  display: inline-block;
  border-radius: 50%;
}
.header  .icon-box-r-name{
  display: inline-block;
  vertical-align: middle;
  margin-top: -32rpx;
}

.header .translate{
  position: absolute;
  top: 0;
  right: 5rpx;
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background-color:#808080;
  color: #fff;
  font-size: 26rpx; 
  text-align: center;
  line-height: 70rpx;
}
